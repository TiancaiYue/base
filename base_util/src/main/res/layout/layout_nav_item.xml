<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nav_iv_icon"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_4"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/nav_tv_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/bg_btn_red_6dp"
        android:lines="1"
        android:minWidth="14dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@+id/nav_iv_icon"
        app:layout_constraintEnd_toEndOf="@id/nav_iv_icon"
        android:textColor="@color/color_white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/nav_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:textSize="@dimen/text_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_iv_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_4"
        tools:text="首页" />
</androidx.constraintlayout.widget.ConstraintLayout>